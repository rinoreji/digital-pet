<Window x:Class="DigitalPetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalPetApp"
    xmlns:h="clr-namespace:DigitalPetApp.Helpers"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Digital Pet"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="{DynamicResource WindowSize}"
        Width="{DynamicResource WindowSize}">
    <Window.Resources>
        <sys:Double x:Key="WindowSize">100</sys:Double>
        <sys:Double x:Key="SpriteFrameSize">80</sys:Double>
    </Window.Resources>
    <Grid Background="Transparent">
     <Image x:Name="DogImage"
         Width="{DynamicResource SpriteFrameSize}"
         Height="{DynamicResource SpriteFrameSize}"
         VerticalAlignment="Bottom"
         HorizontalAlignment="Left"
         Margin="0"
         h:ClickCommandBehavior.ClickCommand="{Binding PetClickedCommand}"/>
    </Grid>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Features" ItemsSource="{Binding Features}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Header" Value="{Binding DisplayName}"/>
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="{Binding IsEnabled, Mode=TwoWay}"/>
                        <Setter Property="Command" Value="{Binding ToggleCommand}"/>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}"/>
            <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>
</Window>

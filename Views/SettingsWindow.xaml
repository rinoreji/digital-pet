<Window x:Class="DigitalPetApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="260" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Idle Timeout (s):" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Margin="5,2" Width="80" Text="{Binding IdleTimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="1" Text="Reminder Interval (min):" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,2" Width="80" Text="{Binding ReminderIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"/>

        <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="Features" Margin="0,8,0,4">
            <StackPanel>
                <CheckBox Content="Reminder" IsChecked="{Binding EnableReminder}"/>
                <CheckBox Content="Hourly Chime" IsChecked="{Binding EnableHourlyChime}"/>
                <CheckBox Content="Idle Animation" IsChecked="{Binding EnableIdleAnimation}"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Width="70" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="70" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>

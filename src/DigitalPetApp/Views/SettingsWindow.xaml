<Window x:Class="DigitalPetApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Height="340" Width="340" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
    </Window.InputBindings>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Idle Timeout -->
            <RowDefinition Height="Auto"/> <!-- Reminder Interval -->
            <RowDefinition Height="Auto"/> <!-- Hotkey -->
            <RowDefinition Height="Auto"/> <!-- Features -->
            <RowDefinition Height="Auto"/> <!-- Audio -->
            <RowDefinition Height="*"/>   <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Idle Timeout (s):" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Margin="5,2" Width="80" Text="{Binding IdleTimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="1" Text="Reminder Interval (min):" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,2" Width="80" Text="{Binding ReminderIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Text="Global Hotkey:" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5,2">
            <ComboBox Width="80" Margin="0,0,8,0" SelectedValue="{Binding HotkeyModifier, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AvailableModifiers}" />
            <ComboBox Width="80" SelectedValue="{Binding HotkeyKey, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding AvailableKeys}" />
        </StackPanel>

        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Features" Margin="0,8,0,4">
            <StackPanel>
                <CheckBox Content="Reminder" IsChecked="{Binding EnableReminder}"/>
                <CheckBox Content="Hourly Chime" IsChecked="{Binding EnableHourlyChime}"/>
                <CheckBox Content="Idle Animation" IsChecked="{Binding EnableIdleAnimation}"/>
                <CheckBox Content="Random Trick" IsChecked="{Binding EnableRandomTrick}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="4" Grid.ColumnSpan="2" Header="Audio" Margin="0,4,0,4">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Volume" Width="60" VerticalAlignment="Center"/>
                    <Slider Width="160" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.1" Value="{Binding Volume, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="{Binding Volume, StringFormat={}{0:P0}}" Margin="8,0,0,0" Width="40"/>
                </StackPanel>
                <CheckBox Content="Mute" IsChecked="{Binding Muted}"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Width="70" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="70" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
